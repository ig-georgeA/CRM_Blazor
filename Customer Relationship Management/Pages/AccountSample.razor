@page "/account-sample"

<div class="column-layout account-sample-container">
    <div class="column-layout group">
        <div class="row-layout account-header">
            <div class="row-layout page-title-1">
                <div class="row-layout group_1">
                    <img src="assets/Accounts Icon - Green.svg" class="image" />
                </div>
                <div class="column-layout group_2">
                    <h6 class="content">
                        Around the Horn
                    </h6>
                    <p class="typography__body-2 text">
                        Brewing Company
                    </p>
                </div>
            </div>
            <div class="row-layout group_3">
                <div class="column-layout group_4">
                    <p class="typography__subtitle-2 content">
                        Primary Contact
                    </p>
                    <p class="typography__caption text">
                        Thomas Hardy
                    </p>
                    <p class="typography__caption text">
                        Sales Representative
                    </p>
                </div>
                <div class="column-layout group_4">
                    <p class="typography__subtitle-2 content">
                        Phone
                    </p>
                    <p class="typography__caption text">
                        (123) 456-7890
                    </p>
                </div>
                <div class="column-layout group_4">
                    <p class="typography__subtitle-2 content">
                        Billing Address
                    </p>
                    <p class="typography__caption text">
                        120 Hanover Sq.
                    </p>
                    <div class="column-layout group_5">
                        <p class="typography__caption text">
                            London,  WA1 1DP
                        </p>
                        <p class="typography__caption text">
                            UK
                        </p>
                    </div>
                </div>
                <div class="column-layout group_4">
                    <p class="typography__subtitle-2 content">
                        Website
                    </p>
                    <p class="typography__caption text_1">
                        www.aroundthehorn.com
                    </p>
                </div>
                <div class="column-layout group_6">
                    <p class="typography__subtitle-2 content">
                        Account Owner
                    </p>
                    <p class="typography__caption text">
                        Sandy Anderson
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row-layout group_7">
        <div class="column-layout group_8">
            <div class="row-layout group_9">
                <IgbButton class="button" account-sample-scope>
                    <span class="material-icons">
                        add
                    </span>
                    <span>New Case</span>
                    <IgbRipple></IgbRipple>
                </IgbButton>
                <IgbButton class="button" account-sample-scope>
                    <span class="material-icons">
                        notes
                    </span>
                    <span>Add Note</span>
                    <IgbRipple></IgbRipple>
                </IgbButton>
                <IgbButton class="button" account-sample-scope>
                    <span class="material-icons">
                        file_copy
                    </span>
                    <span>Add Files</span>
                    <IgbRipple></IgbRipple>
                </IgbButton>
            </div>
            <IgbTabs class="tabs" account-sample-scope>
                <IgbTabPanel class="column-layout tab-item-content" account-sample-scope>
                    <div class="column-layout group_10">
                        <div class="row-layout buttons">
                            <IgbButton class="button" account-sample-scope>
                                <span class="material-icons">
                                    person_add
                                </span>
                                <span>Contact</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                            <IgbButton class="button" account-sample-scope>
                                <span class="material-icons">
                                    star
                                </span>
                                <span>New Opportunity</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                            <IgbButton class="button" account-sample-scope>
                                <span class="material-icons">
                                    add
                                </span>
                                <span>New Case</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                            <IgbButton class="button" account-sample-scope>
                                <span class="material-icons">
                                    notes
                                </span>
                                <span>Add Note</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                            <IgbButton class="button" account-sample-scope>
                                <span class="material-icons">
                                    file_copy
                                </span>
                                <span>Add Files</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                        </div>
                        <IgbAccordion SingleSelect="false" class="accordion" account-sample-scope>
                            <IgbExpansionPanel IndicatorPosition="ExpansionPanelIndicatorPosition.End">
                                <div class="column-layout group_11">
                                    <div class="row-layout group_12">
                                        <div class="row-layout group_13">
                                            <img src="assets/Accounts Icon - Green.svg" class="image_1" />
                                        </div>
                                        <a href class="typography__body-2 hyperlink">
                                            Around The Horn
                                        </a>
                                    </div>
                                    <div class="column-layout group_14">
                                        <div class="row-layout group_15">
                                            <p class="typography__subtitle-2 text_2">
                                                Stage:
                                            </p>
                                            <p class="typography__body-2 text">
                                                Qualification
                                            </p>
                                        </div>
                                        <div class="row-layout group_15">
                                            <p class="typography__subtitle-2 text_2">
                                                Amount:
                                            </p>
                                            <p class="typography__body-2 text">
                                                Owner
                                            </p>
                                        </div>
                                        <div class="row-layout group_15">
                                            <p class="typography__subtitle-2 text_2">
                                                Close Date:
                                            </p>
                                            <p class="typography__body-2 text">
                                                9/12/2022
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <span slot="title">Opportunities (1)</span>
                            </IgbExpansionPanel>
                            <IgbExpansionPanel IndicatorPosition="ExpansionPanelIndicatorPosition.End">
                                <IgbList class="list" account-sample-scope>
                                    <IgbListItem>
                                        <div slot="start">
                                            <IgbAvatar Shape="AvatarShape.Circle" class="avatar avatar_1" account-sample-scope>
                                                <span class="material-icons">insert_drive_file</span>
                                            </IgbAvatar>
                                        </div>
                                        <div>
                                            <a href class="typography__body-2 content">
                                                Around-The-Horn-Contract-2022.docx
                                            </a>
                                        </div>
                                    </IgbListItem>
                                    <IgbListItem>
                                        <div slot="start">
                                            <IgbAvatar Shape="AvatarShape.Circle" class="avatar avatar_2" account-sample-scope>
                                                <span class="material-icons">insert_drive_file</span>
                                            </IgbAvatar>
                                        </div>
                                        <div>
                                            <a href class="typography__body-2 content">
                                                Around-The-Horn-Contract-2021.docx
                                            </a>
                                        </div>
                                    </IgbListItem>
                                </IgbList>
                                <span slot="title">Contracts (2)</span>
                            </IgbExpansionPanel>
                            <IgbExpansionPanel IndicatorPosition="ExpansionPanelIndicatorPosition.End">
                                <div class="column-layout group_11">
                                    <div class="row-layout group_12">
                                        <IgbAvatar Initials="JL" Shape="AvatarShape.Circle" class="avatar avatar_3" account-sample-scope></IgbAvatar>
                                        <a href class="typography__body-2 hyperlink">
                                            Janine Labrune
                                        </a>
                                    </div>
                                    <div class="column-layout group_14">
                                        <div class="row-layout group_15">
                                            <p class="typography__subtitle-2 text_2">
                                                Account Name:
                                            </p>
                                            <p class="typography__body-2 text">
                                                Thomas Hardy
                                            </p>
                                        </div>
                                        <div class="row-layout group_15">
                                            <p class="typography__subtitle-2 text_2">
                                                Title:
                                            </p>
                                            <p class="typography__body-2 text">
                                                Owner
                                            </p>
                                        </div>
                                        <div class="row-layout group_16">
                                            <p class="typography__subtitle-2 text_2">
                                                Direct:
                                            </p>
                                            <IgbCheckbox class="checkbox" account-sample-scope></IgbCheckbox>
                                        </div>
                                    </div>
                                </div>
                                <span slot="title">Related Contacts (1)</span>
                            </IgbExpansionPanel>
                            <IgbExpansionPanel IndicatorPosition="ExpansionPanelIndicatorPosition.End">
                                <span slot="title">Cases (0)</span>
                            </IgbExpansionPanel>
                            <IgbExpansionPanel IndicatorPosition="ExpansionPanelIndicatorPosition.End">
                                <span slot="title">Notes (0)</span>
                            </IgbExpansionPanel>
                            <IgbExpansionPanel IndicatorPosition="ExpansionPanelIndicatorPosition.End">
                                <span slot="title">Files (0)</span>
                            </IgbExpansionPanel>
                        </IgbAccordion>
                    </div>
                </IgbTabPanel>
                <IgbTab Selected="true">
                    Related
                </IgbTab>
                <IgbTabPanel class="row-layout tab-item-content" account-sample-scope></IgbTabPanel>
                <IgbTab>
                    Details
                </IgbTab>
                <IgbTabPanel class="row-layout tab-item-content" account-sample-scope></IgbTabPanel>
                <IgbTab>
                    News
                </IgbTab>
            </IgbTabs>
        </div>
        <div class="column-layout group_17">
            <IgbTabs class="tabs" account-sample-scope>
                <IgbTabPanel class="column-layout tab-item-content" account-sample-scope>
                    <div class="column-layout group_10">
                        <div class="row-layout buttons_1">
                            <IgbButton class="button" account-sample-scope>
                                <span class="material-icons">
                                    calendar_today
                                </span>
                                <span>New Meeting</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                            <IgbButton class="button" account-sample-scope>
                                <span class="material-icons">
                                    star_border
                                </span>
                                <span>New task</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                            <IgbButton class="button_1" account-sample-scope>
                                <span class="material-icons">
                                    call
                                </span>
                                <span>Log a call</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                        </div>
                        <IgbAccordion SingleSelect="false" class="accordion" account-sample-scope>
                            <IgbExpansionPanel IndicatorPosition="ExpansionPanelIndicatorPosition.End">
                                <IgbList class="list" account-sample-scope>
                                    <IgbListItem>
                                        <div slot="start">
                                            <IgbAvatar Src="assets/Calendar-Avatar-Icon.svg" class="avatar avatar_4" account-sample-scope></IgbAvatar>
                                        </div>
                                        <div>
                                            <div class="column-layout group_18">
                                                <div class="row-layout group_19">
                                                    <p class="typography__subtitle-2 text_3">
                                                        Project Intro
                                                    </p>
                                                </div>
                                                <div class="row-layout group_20">
                                                    <p class="typography__caption text_4">
                                                        11/1/2022
                                                    </p>
                                                    <p class="typography__caption text_4">
                                                        -
                                                    </p>
                                                    <p class="typography__caption text_4">
                                                        10am
                                                    </p>
                                                </div>
                                                <IgbChip Size="SizableComponentSize.Large" class="chip" account-sample-scope>
                                                    Zoom Meeting
                                                </IgbChip>
                                            </div>
                                        </div>
                                    </IgbListItem>
                                    <IgbListItem>
                                        <div slot="start">
                                            <IgbAvatar Src="assets/Calendar-Avatar-Icon.svg" class="avatar avatar_5" account-sample-scope></IgbAvatar>
                                        </div>
                                        <div>
                                            <div class="column-layout group_18">
                                                <div class="row-layout group_19">
                                                    <p class="typography__subtitle-2 text_3">
                                                        Sync Meeting
                                                    </p>
                                                </div>
                                                <div class="row-layout group_20">
                                                    <p class="typography__caption text_4">
                                                        11/7/2022
                                                    </p>
                                                    <p class="typography__caption text_4">
                                                        -
                                                    </p>
                                                    <p class="typography__caption text_4">
                                                        2pm
                                                    </p>
                                                </div>
                                                <IgbChip Size="SizableComponentSize.Large" class="chip" account-sample-scope>
                                                    On Site Meeting
                                                </IgbChip>
                                            </div>
                                        </div>
                                    </IgbListItem>
                                    <IgbListItem>
                                        <div slot="start">
                                            <IgbAvatar Src="assets/Calendar-Avatar-Icon.svg" class="avatar avatar_6" account-sample-scope></IgbAvatar>
                                        </div>
                                        <div>
                                            <div class="column-layout group_18">
                                                <div class="row-layout group_19">
                                                    <p class="typography__subtitle-2 text_3">
                                                        Wrap Up Meeting
                                                    </p>
                                                </div>
                                                <div class="row-layout group_20">
                                                    <p class="typography__caption text_4">
                                                        11/14/2022
                                                    </p>
                                                    <p class="typography__caption text_4">
                                                        -
                                                    </p>
                                                    <p class="typography__caption text_4">
                                                        4pm
                                                    </p>
                                                </div>
                                                <IgbChip Size="SizableComponentSize.Large" class="chip" account-sample-scope>
                                                    Phone call
                                                </IgbChip>
                                            </div>
                                        </div>
                                    </IgbListItem>
                                </IgbList>
                                <span slot="title">Upcoming Events (3)</span>
                            </IgbExpansionPanel>
                            <IgbExpansionPanel IndicatorPosition="ExpansionPanelIndicatorPosition.End">
                                <span slot="title">Tasks (0)</span>
                            </IgbExpansionPanel>
                            <IgbExpansionPanel IndicatorPosition="ExpansionPanelIndicatorPosition.End">
                                <span slot="title">Call Logs (0)</span>
                            </IgbExpansionPanel>
                        </IgbAccordion>
                    </div>
                </IgbTabPanel>
                <IgbTab Selected="true">
                    Activity
                </IgbTab>
                <IgbTabPanel class="row-layout tab-item-content" account-sample-scope></IgbTabPanel>
                <IgbTab>
                    Conversations
                </IgbTab>
            </IgbTabs>
        </div>
    </div>
</div>

