    </div>
    <div class="row-layout group_7">
        <div class="column-layout group_8">
            <IgbTabs class="tabs" account-sample-scope>
                <IgbTab Selected="true">
                    Related
                </IgbTab>
                <IgbTabPanel class="column-layout tab-item-content" account-sample-scope>
                    <div class="row-layout buttons-1">
                        <IgbButton class="button" account-sample-scope>
                            <span class="material-icons">
                                person_add
                            </span>
                            <span>Contact</span>
                            <IgbRipple></IgbRipple>
                        </IgbButton>
                        <IgbButton class="button" account-sample-scope>
                            <span class="material-icons">
                                star
                            </span>
                            <span>New Opportunity</span>
                            <IgbRipple></IgbRipple>
                        </IgbButton>
                        <IgbButton class="button" account-sample-scope>
                            <span class="material-icons">
                                add
                            </span>
                            <span>New Case</span>
                            <IgbRipple></IgbRipple>
                        </IgbButton>
                        <IgbButton class="button" account-sample-scope>
                            <span class="material-icons">
                                notes
                            </span>
                            <span>Add Note</span>
                            <IgbRipple></IgbRipple>
                        </IgbButton>
                        <IgbButton class="button" account-sample-scope>
                            <span class="material-icons">
                                file_copy
